<%- include("../layouts/main", { body: `
  <div class="d-flex align-items-start justify-content-between flex-wrap gap-2 mb-3">
    <div>
      <h4 class="mb-1">Uyeler</h4>
      <div class="text-muted">Uye ekle, duzenle, pasife al</div>
    </div>
    <div class="d-flex gap-2">
      <a class="btn btn-primary btn-sm" href="/admin/members/new"><i class="bi bi-person-plus me-1"></i>Yeni Uye</a>
    </div>
  </div>

  <div class="card app-card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th style="width:80px">ID</th>
              <th>Ad Soyad</th>
              <th class="d-none d-md-table-cell">Telefon</th>
              <th class="d-none d-lg-table-cell">Email</th>
              <th style="width:120px">Durum</th>
              <th class="text-end" style="width:180px">Islemler</th>
            </tr>
          </thead>
          <tbody>
            ${members.map(m => `
              <tr>
                <td class="text-muted">#${m.id}</td>
                <td>
                  <div class="fw-semibold">${m.full_name}</div>
                  <div class="small text-muted d-lg-none">${m.email || ""}</div>
                </td>
                <td class="d-none d-md-table-cell">${m.phone || ""}</td>
                <td class="d-none d-lg-table-cell">${m.email || ""}</td>
                <td>
                  ${m.is_active ? `<span class="badge text-bg-success">Aktif</span>` : `<span class="badge text-bg-secondary">Pasif</span>`}
                </td>
                <td class="text-end">
                  <a class="btn btn-outline-secondary btn-sm" href="/admin/members/${m.id}/edit">
                    <i class="bi bi-pencil-square"></i>
                  </a>
                  <form method="post" action="/admin/members/${m.id}/delete" class="d-inline">
                    <input type="hidden" name="_csrf" value="${csrfToken}"/>
                    <button class="btn btn-outline-danger btn-sm" onclick="return confirm('Silinsin mi?')">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>
            `).join("")}
          </tbody>
        </table>
      </div>
    </div>
  </div>
` }) %>
