<%- include("../layouts/main", { body: `
  <div class="d-flex align-items-start justify-content-between flex-wrap gap-2 mb-3">
    <div>
      <h4 class="mb-1"><i class="bi bi-postcard me-1"></i>Ilanlar</h4>
      <div class="text-muted">En guncel paylasimlar</div>
    </div>
    <div class="d-flex gap-2">
      <a class="btn btn-ghost btn-sm" href="/"><i class="bi bi-house me-1"></i>Anasayfa</a>
    </div>
  </div>

  <div class="row g-3">
    {(items||[]).map(n => `
      <div class="col-lg-6">
        <div class="card app-card shadow-sm h-100">
          <div class="card-body">
            <div class="fw-semibold fs-6">${n.title}</div>
            <div class="text-muted small mb-2">${n.created_at}</div>
            <div class="app-content-text">${n.body}</div>
          </div>
        </div>
      </div>
    `).join("") || `<div class="text-muted">Henuz kayit yok.</div>`}
  </div>

  {user && user.role==="admin" ? `
  <div class="card app-card shadow-sm mt-4">
    <div class="card-body">
      <div class="fw-semibold mb-2">Admin: Yeni Kayit</div>
      <form method="post" action="/admin/classifieds">
        <input type="hidden" name="_csrf" value="${csrfToken}"/>
        <input class="form-control mb-2" name="title" placeholder="Baslik" required/>
        <textarea class="form-control mb-2" name="body" rows="4" placeholder="Icerik" required></textarea>
        <button class="btn btn-primary btn-sm"><i class="bi bi-plus-lg me-1"></i>Ekle</button>
      </form>
    </div>
  </div>` : ""}
` } ) %>
