<header class="app-topbar border-bottom">
  <div class="container-fluid app-container d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center gap-2">
      <% if (user && user.role === "admin") { %>
        <button class="btn btn-sm btn-light d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#adminOffcanvas">
          <i class="bi bi-list"></i>
        </button>
      <% } %>

      <a class="app-brand d-flex align-items-center gap-2 text-decoration-none" href="/">
        <span class="app-logo app-logo-initials fw-bold"><%= appShort %></span>
        <span class="fw-semibold brand-title"><%= appName %></span>
      </a>
    </div>

    <nav class="d-none d-lg-flex align-items-center gap-1">
      <a class="btn btn-sm btn-ghost" href="/news"><i class="bi bi-newspaper me-1"></i>Haberler</a>
      <a class="btn btn-sm btn-ghost" href="/announcements"><i class="bi bi-megaphone me-1"></i>Duyurular</a>
      <a class="btn btn-sm btn-ghost" href="/gallery"><i class="bi bi-images me-1"></i>Galeri</a>
      <a class="btn btn-sm btn-ghost" href="/classifieds"><i class="bi bi-postcard me-1"></i>Ilanlar</a>
      <a class="btn btn-sm btn-ghost" href="/forum"><i class="bi bi-chat-left-text me-1"></i>Forum</a>
    </nav>

    <div class="d-flex align-items-center gap-2">
      <% if (!user) { %>
        <a class="btn btn-primary btn-sm" href="/login"><i class="bi bi-box-arrow-in-right me-1"></i>Giris</a>
      <% } else { %>
        <span class="badge text-bg-light d-none d-md-inline">
          <i class="bi bi-person-circle me-1"></i><%= user.username %> â€¢ <%= user.role %>
        </span>

        <% if (user.role === "admin") { %>
          <a class="btn btn-outline-primary btn-sm d-none d-md-inline" href="/admin"><i class="bi bi-speedometer2 me-1"></i>Admin</a>
        <% } else { %>
          <a class="btn btn-outline-primary btn-sm d-none d-md-inline" href="/member/finance"><i class="bi bi-wallet2 me-1"></i>Hesabim</a>
        <% } %>

        <form method="post" action="/logout" class="d-inline">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
          <button class="btn btn-outline-danger btn-sm"><i class="bi bi-box-arrow-right me-1"></i>Cikis</button>
        </form>
      <% } %>
    </div>
  </div>

  <% if (user && user.role === "admin") { %>
  <!-- Mobile offcanvas for admin -->
  <div class="offcanvas offcanvas-start" tabindex="-1" id="adminOffcanvas">
    <div class="offcanvas-header">
      <div class="d-flex align-items-center gap-2">
        <span class="app-logo app-logo-initials fw-bold"><%= appShort %></span>
        <strong><%= appName %></strong>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body p-0">
      <%- include("../partials/admin_sidebar") %>
    </div>
  </div>
  <% } %>
</header>
